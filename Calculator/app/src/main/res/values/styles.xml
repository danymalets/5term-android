<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:onClick">onButtonClick</item>
    </style>

    <style name="CharacterButton" parent="CalculatorButton">
        <item name="android:textSize">30dp</item>
        <item name="android:backgroundTint">@color/character_button</item>
    </style>

    <style name="SimpleActionButton" parent="CalculatorButton">
        <item name="android:textSize">20dp</item>
        <item name="android:backgroundTint">@color/simple_action_button</item>
    </style>

    <style name="ComplexActionButton" parent="CalculatorButton">
        <item name="android:textSize">15dp</item>
        <item name="android:backgroundTint">@color/complex_action_button</item>
    </style>
</resources>